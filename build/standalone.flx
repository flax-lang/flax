func vartup<T, K, U>(f: [(T, T) -> K], y: (U, U)[...]) -> K[]
{
	var ret = alloc[y.length] K

	var i = 0
	while i < y.length
	{
		ret[i] = f(y[i])
	}

	retun ret
}












import Foundation

ƒ doRecursiveFib(n: Int, v: Int, prev: Int) -> Int
{
	if n == 0 { return prev }
	if n == 1 { return v }

	return doRecursiveFib(n - 1, v + prev, v)
}

public ƒ doRecursiveFib(n: Int) -> Int
{
	return doRecursiveFib(n, 1, 0)
}

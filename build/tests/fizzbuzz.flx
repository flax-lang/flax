export test_fizz
import libc

public fn doFizzBuzz(num: int)
{
	var i = 0
	while i <= num
	{
		libc::printf("%02d:      ", i)

		if i % 3 == 0
		{
			libc::printf("Fizz")
		}
		if i % 5 == 0
		{
			libc::printf("Buzz")
		}

		if i % 5 != 0 && i % 3 != 0
		{
			libc::printf("%d", i)
		}

		libc::printf("\n")
		i += 1
	}
}

import Foundation

public fn doFizzBuzz(num: int)
{
	var i = 0
	while i <= num
	{
		printf("%02d:      ", i)

		if i % 3 == 0
		{
			printf("Fizz")
		}
		if i % 5 == 0
		{
			printf("Buzz")
		}

		if i % 5 != 0 && i % 3 != 0
		{
			printf("%d", i)
		}

		printf("\n")
		i += 1
	}
}

import Foundation

public fn printIntegerLimits()
{
	printf("i8.min   = %hhd\t\t\t\ti8.max   = %hhd\n", i8.min, i8.max);
	printf("i16.min  = %hd\t\t\ti16.max  = %hd\n", i16.min, i16.max);
	printf("i32.min  = %d\t\t\ti32.max  = %d\n", i32.min, i32.max);
	printf("i64.min  = %lld\t\ti64.max  = %lld\n", i64.min, i64.max);

	printf("\n")

	printf("u8.min   = %hhu\t\t\t\tu8.max   = %hhu\n", u8.min, u8.max);
	printf("u16.min  = %hu\t\t\t\tu16.max  = %hu\n", u16.min, u16.max);
	printf("u32.min  = %u\t\t\t\tu32.max  = %u\n", u32.min, u32.max);
	printf("u64.min  = %llu\t\t\t\tu64.max  = %llu\n", u64.min, u64.max);
}

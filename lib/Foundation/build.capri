version 1.18;
import "../../build.capri";

project libFoundation
{
	flaxc		= "{sysroot}/{prefix}/{outputBin}";
	src			= "source";
	mainFile	= "Foundation.flx";

	task all depends compile;
	task compile
	{
		assert System.execute("mkdir -p '{sysroot}'/usr/lib/flaxlibs") == 0;
		assert System.execute("cp {src}/{mainFile} '{sysroot}'/usr/lib/flaxlibs/") == 0;
	}
}















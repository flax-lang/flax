version 1.18;
import "../../build.capri";

project libFoundation
{
	COREC		= "{sysroot}/{prefix}/{outputBin}";
	src			= "source";
	mainFile	= "Foundation.crs";


	corec_invoke	= "'{COREC}' -lib -sysroot '{sysroot}' -o '{sysroot}/usr/lib/'";

	task all depends compile;
	task compile
	{
		assert System.execute("{corec_invoke} {src}/{mainFile}") == 0;
	}
}














